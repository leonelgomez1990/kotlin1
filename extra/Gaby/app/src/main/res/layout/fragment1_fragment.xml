<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment1">

    <Button
        android:id="@+id/btnMod3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mod_3"
        app:layout_constraintBottom_toTopOf="@+id/btnMod4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMod2" />

    <Button
        android:id="@+id/btnMod4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mod_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMod3" />

    <Button
        android:id="@+id/btnMod1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mod_1"
        app:layout_constraintBottom_toTopOf="@+id/btnMod2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMod2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mod_2"
        app:layout_constraintBottom_toTopOf="@+id/btnMod3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMod1" />
</androidx.constraintlayout.widget.ConstraintLayout>